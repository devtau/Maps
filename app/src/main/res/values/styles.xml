<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextWrapsContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/text_color_selector</item>
    </style>

    <style name="TextRegular" parent="TextWrapsContent">
        <item name="custom_font">@string/regular</item>
    </style>

    <style name="TextLight" parent="TextWrapsContent">
        <item name="custom_font">@string/light</item>
    </style>

    <style name="TextMedium" parent="TextWrapsContent">
        <item name="custom_font">@string/medium</item>
    </style>
</resources>
