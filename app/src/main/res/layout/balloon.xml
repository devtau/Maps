<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="180dp"
    android:padding="10dp"
    android:orientation="vertical">

    <com.devtau.mapsExample.FontTextView
        android:id="@+id/address"
        tools:text="Вокзальная ул., Северный Автовокзал"
        style="@style/TextRegular"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <com.devtau.mapsExample.FontTextView
            android:text="@string/from"
            android:textColor="@color/colorGray137"
            style="@style/TextRegular"/>

        <com.devtau.mapsExample.FontTextView
            android:id="@+id/workTimeFrom"
            tools:text="10:00"
            style="@style/TextRegular"
            android:layout_marginLeft="2dp"/>

        <com.devtau.mapsExample.FontTextView
            android:text="@string/to"
            style="@style/TextRegular"
            android:textColor="@color/colorGray137"
            android:layout_marginLeft="2dp"/>

        <com.devtau.mapsExample.FontTextView
            android:id="@+id/workTimeTo"
            tools:text="23:00"
            style="@style/TextRegular"
            android:layout_marginLeft="2dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical">

        <ImageView
            android:src="@drawable/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.devtau.mapsExample.FontTextView
            android:id="@+id/phone"
            tools:text="8 (812) 570 70 70"
            style="@style/TextRegular"
            android:layout_marginLeft="2dp"/>
    </LinearLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/takeAway"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorTransparent"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_rect_border" />

        <com.devtau.mapsExample.FontTextView
            android:text="@string/take_away_from_here"
            style="@style/TextMedium"
            android:textColor="@color/colorRed"
            android:layout_gravity="center"
            android:textAllCaps="true"/>
    </android.support.v7.widget.CardView>
</LinearLayout>
